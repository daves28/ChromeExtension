{
    "manifest_version": 2,
    "name": "EmergencyPizza",
    "version": "0.1",
    "description":"Finds the nearest pizza places near you!",
    "content_scripts": [{"matches": ["<all_urls>"], "js": ["content.js"]}],
    "browser_action": {
        "default_icon": "assets/pizza-icon.png"
        
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": ["geolocation", "tabs"]
}